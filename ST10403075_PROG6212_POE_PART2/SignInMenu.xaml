<Window x:Class="ST10403075_PROG6212_POE_PART2.SignInMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sign In" Height="250" Width="400">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="ID:" />
            <TextBox x:Name="IDTextBox" Width="200" />

            <TextBlock Text="Password:" Margin="0,10,0,0" />
            <PasswordBox x:Name="PasswordBox" Width="200" />

            <Button Content="Sign In" Click="SignIn_Click" Width="100" Margin="0,20,0,0" />

            <TextBlock HorizontalAlignment="Center" Margin="0,10,0,0">
                <Hyperlink Click="NeedAccount_Click">
                    Need an Account?
                </Hyperlink>
            </TextBlock>
        </StackPanel>
    </Grid>
</Window>