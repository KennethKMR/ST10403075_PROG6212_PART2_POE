<Window x:Class="ST10403075_PROG6212_POE_PART2.LecturerSignUp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lecturer Sign Up" Height="384" Width="565">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Name:" />
            <TextBox x:Name="NameTextBox" Width="200" />

            <TextBlock Text="Password:" Margin="0,10,0,0" />
            <PasswordBox x:Name="PasswordBox" Width="200" />

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                <Button Content="Sign Up" Click="SignUp_Click" Width="100" />
                <Button Content="Close" Click="Close_Click" Width="100" Margin="10,0,0,0" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>